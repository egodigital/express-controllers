{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "outDir": "./lib",
        "lib": [
            "es2019"
        ],
        "sourceMap": true,
        "rootDir": "./src",
        "strict": false,
        "noUnusedLocals": true,
        "removeComments": false,
        "allowUnreachableCode": false,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "declaration": true
    },
    "exclude": [
        "node_modules"
    ]
}